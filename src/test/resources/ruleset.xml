<?xml version="1.0"?>
<ruleset name="Custom ruleset"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">
    <description>Custom ruleset for our project</description>
    <rule
            name="MessageTypeEnforcer"
            class="org.example.MessageTypeEnforcer"
            language="java"
            message="Detected incorrect object type for a topic">
        <description>Enforce correct objects types are created for topics</description>
        <priority>3</priority>
    </rule>
</ruleset>
